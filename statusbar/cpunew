	1) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd,%mem --sort=%mem | awk '{a[$1]+=$2}END{for(i in a) print i,a[i] "%"}' | sort -n -r -k2 | head | column -t
)\\n(100% per core)" ;;
